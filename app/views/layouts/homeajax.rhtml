<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
      <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
      <title>Everest Solutions</title>
      <%= stylesheet_link_tag 'home.css' %>
      <%= javascript_include_tag 'prototype' %>
</head>
<body>
  <div id=wrapper>
          <div id=header>
                <ul id=menulink>
                     <% for menu in @all_menus %>
                      <li><%= link_to_remote menu.title,
                                  :update => 'content',
                                  :method => 'get',
                                  :url =>  'C:/ruby/InstantRails/rails_apps/menus/app/views/home/11.html' %>
                      </li>
                     <% end %>
                </ul><!-- menulink -->
                <ul id=optionlink>
                     <% for option in @all_options %>
                      <li><a href="<%= option.menu_id %><%= option.oposition %>.html"><%= option.name %></a></li>
                     <% end %>
                </ul><!-- optionlink -->
          </div><!-- header -->
          <div id=main>
              <div id=contentbox>
                   <div id=content>
                   
                          <%= yield  %>
                          
                    </div> <!-- content -->
              </div> <!-- contentbox -->
              <div id=sideimg>
                      <img src="../images/learnwhat.jpg">
              </div> <!-- sideimg -->
              <div id=clearone>&nbsp;</div>
          </div><!-- main -->
              <div id=footers>
                  <div id=contactinfo>
                            <p>Phone: (954)456-8187</p>
                  </div> <!-- contactinfo -->
                  <div id=footerbar>
                    <p><www.everestsolutions.com</p>
                  </div> <!-- footerbar -->
              </div><!-- footers -->
  </div><!-- wrapper -->
</body>
</html>
